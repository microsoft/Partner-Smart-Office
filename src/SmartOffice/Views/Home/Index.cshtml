@model IEnumerable<Microsoft.Partner.SmartOffice.Models.EnvironmentDetail>

@{
    ViewData["Title"] = "Home Page";
}

<br />

<p>
    <a asp-action="AddNew">Add New Environment</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FriendlyName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EnvironmentType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastProcessed)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FriendlyName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EnvironmentType)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastProcessed)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>